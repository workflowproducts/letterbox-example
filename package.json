{
	"name": "letterbox-example",
	"version": "1.0.2",
	"description": "An example program using letterbox",
	"main": "index.js",
	"license": "Apache-2.0",
	"scripts": {
		"start": "electron .",
		"dist": "electron-builder build .",
		"dist-win": "electron-builder build --arch all"
	},
	"author": "Nunzio Tocci <nunzio@workflowproducts.com> (http://www.workflowproducts.com/)",
	"build": {
		"appId": "com.workflowproducts.letterbox-example",
		"asar": false,
		"mac": {
			"category": "public.app-category.developer-tools"
		},
		"win": {
			"target": "nsis"
		},
		"linux": {
			"target": [
				"deb",
				"rpm"
			]
		},
		"rpm": {
			"depends": [
				"postgresql-libs"
			]
		},
		"deb": {
			"depends": [
				"libxss1",
				"libpq5",
				"gconf2",
				"gconf-service",
				"libnotify4",
				"libappindicator1",
				"libxtst6",
				"libnss3"
			]
		},
		"dmg": {
			"icon": null
		}
	},
	"devDependencies": {
		"electron": "^11.5.0",
		"electron-builder": "^21.2.0"
	},
	"dependencies": {
		"letterbox": "^2.1.0",
		"postcard": "^1.1.0"
	}
}
